package com.example.testproject.model;

import javax.persistence.*;


@Entity
public class Product {
    // ... other fields ...

    @NotNull
    @Size(min=1, message="Name should not be empty")
    private String name;

    @NotNull
    private String description;

    @NotNull
    @DecimalMin("0.1")
    private BigDecimal price;

    @NotNull
    private BigDecimal tax;

    // ... getters and setters ...
}
